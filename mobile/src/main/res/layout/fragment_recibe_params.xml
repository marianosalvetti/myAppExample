<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:background="#9933CC"
        android:text="FRAGMENT CUATRO"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/texto_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" android:textColor="@color/myPrimaryDarkColor"
        android:padding="20dp" android:text="Parametro"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="Pulsa la tecla volver del smartphone para volver a la lista"/>

</RelativeLayout>